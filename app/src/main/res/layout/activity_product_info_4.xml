<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/line_4_2">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Защита салона"
        android:textColor="#201E1E"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp" />

    <!-- Фото -->
    <ImageView
        android:id="@+id/imageCover"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/leather_boost"
        android:background="@drawable/rounded_corners"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp" />

    <!-- Описание -->
    <TextView
        android:id="@+id/textDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Защитный состав для кожи Nasiol Leater150 Leatherboost 150 мл 053222 - прозрачная нано-защита натуральной и искусственной кожи. Обеспечивает максимальную защиту кожи автомобиля, яхт, личных вещей, мебели. Продлевает срок службы вашей кожи и защищает поверхность от химических веществ, УФ-лучей, грязи, масла, воды и пятен Гидрофобность;
Репеллентность масла;
Воздухопроницаемость..

"
        android:padding="16dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/imageCover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Логотип -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="187dp"
        android:layout_height="113dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/penta_logo_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>