<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/line_1">

    <!-- Заголовок "Информация по продуктам" -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Услуги"
        android:textSize="48sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <!-- Контейнер для кнопок -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/textViewTitle"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="5"
            android:orientation="horizontal"
            android:layout_below="@id/textViewTitle"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:columnOrderPreserved="false">

            <!-- Добавляем кнопки для перехода к дополнительной информации -->

            <Button
                android:id="@+id/buttonInfo1"
                style="@style/GreenButtonStyle"
                android:layout_width="158dp"
                android:layout_height="99dp"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:text="Полиуретановая пленка" />

            <Button
                android:id="@+id/buttonInfo2"
                style="@style/GreenButtonStyle"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:text="Керамическое покрытие"
                android:layout_width="158dp"
                android:layout_height="158dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="21dp" />

            <Button
                android:id="@+id/buttonInfo3"
                style="@style/GreenButtonStyle"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:text="Полировальные системы"
                android:layout_width="158dp"
                android:layout_height="99dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp" />

            <Button
                android:id="@+id/buttonInfo4"
                style="@style/GreenButtonStyle"
                android:layout_columnSpan="1"
                android:layout_rowSpan="2"
                android:text="Защита салона автомобиля"
                android:layout_width="158dp"
                android:layout_height="158dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="21dp" />

            <Button
                android:id="@+id/buttonInfo5"
                style="@style/GreenButtonStyle"
                android:layout_columnSpan="1"
                android:layout_rowSpan="2"
                android:text="Антидождь и защита ткани"
                android:layout_width="158dp"
                android:layout_height="99dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="21dp" />

        </GridLayout>
    </LinearLayout>

    <!-- Добавляем изображение penta_logo_pink -->
    <ImageView
        android:id="@+id/imageViewCenter"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="66dp"
        android:src="@drawable/penta_logo_pink" />

</RelativeLayout>
